{
  "name": "waveform-data",
  "version": "1.5.3",
  "description": "Audio Waveform Data Manipulation API â€“ resample, offset and segment waveform data in JavaScript.",
  "main": "waveform-data.js",
  "homepage": "https://github.com/bbc/waveform-data.js",
  "scripts": {
    "pretest": "npm run build",
    "test": "npm run test-node && npm run test-browsers",
    "test-browsers": "xvfb-maybe ./node_modules/karma/bin/karma start",
    "test-node": "mocha -R dot 'test/unit/*.js' 'test/unit/adapters/*.js'",
    "posttest-node": "npm run lint",
    "lint": "jshint -c .jshintrc ./lib",
    "test-coverage": "mocha -R travis-cov -r blanket 'test/unit/**/*.js'",
    "test-watch": "mocha -R dot --watch 'test/unit/*.js' 'test/unit/adapters/*.js'",
    "code-coverage": "mocha -r blanket 'test/unit/*.js' 'test/unit/adapters/*.js' > dist/code-coverage.html",
    "build": "npm run build-browsers",
    "build-browsers": "browserify -r ./waveform-data.js -s WaveformData -o dist/waveform-data.js && grunt uglify"
  },
  "config": {
    "blanket": {
      "pattern": "waveform-data.js/lib/",
      "data-cover-never": "audiodecoder"
    },
    "travis-cov": {
      "threshold": 99
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bbc/waveform-data.js.git"
  },
  "keywords": [
    "webaudio",
    "waveform",
    "audio",
    "visualisation"
  ],
  "author": "Thomas Parisot <thomas.parisot@bbc.co.uk>",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/bbc/waveform-data.js/issues"
  },
  "testling": {
    "files": "test/unit/*.js",
    "harness": "mocha-bdd",
    "browsers": [
      "ie/9..10",
      "ff/latest..nightly",
      "chrome/latest..canary",
      "opera/latest..next",
      "safari/latest",
      "ipad/latest",
      "android/latest"
    ]
  },
  "devDependencies": {
    "blanket": "1.1.9",
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "grunt": "^0.4.1",
    "grunt-cli": "^0.1.13",
    "grunt-contrib-uglify": "^0.9.2",
    "grunt-jsdoc-md": "github:oncletom/grunt-jsdoc-md",
    "jshint": "^2.5.1",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-safari-launcher": "^1.0.0",
    "mocha": "^3.2.0",
    "sinon": "^1.10.3",
    "sinon-chai": "^2.6.0",
    "testling": "^1.6.1",
    "travis-cov": "^0.2.5",
    "watchify": "^3.7.0",
    "xvfb-maybe": "^0.1.3"
  },
  "dependencies": {}
}
